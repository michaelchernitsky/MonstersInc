@model RegisterViewModel

@if (Model.IsSuccess)
{
	<div class="message message-success" role="alert">
		<div>
			<h3 class="text-base mb-1">Success</h3>
			<ul>
				<li>New user registration was successfully completed</li>
			</ul>
		</div>
	</div>
}

@Html.Partial("_ValidationSummary")

<form asp-route="Register" method="post">
	<div class="form-group">
		<label class="form-label" asp-for="Username"></label>
		<input class="form-control" asp-for="Username" />
	</div>
	<div class="form-group">
		<label class="form-label" asp-for="Password"></label>
		<input type="password" class="form-control" asp-for="Password" autocomplete="off" />
	</div>
	<div class="form-group">
		<label class="form-label" asp-for="ConfirmPassword"></label>
		<input type="password" class="form-control" asp-for="ConfirmPassword" autocomplete="off" />
	</div>
	<div class="form-group">
		<label class="form-label" asp-for="FirstName"></label>
		<input type="text" class="form-control" asp-for="FirstName" autocomplete="off" />
	</div>
	<div class="form-group">
		<label class="form-label" asp-for="LastName"></label>
		<input type="text" class="form-control" asp-for="LastName" autocomplete="off" />
	</div>
	<div class="form-group">
		<label class="form-label" asp-for="PhoneNumber"></label>
		<input type="tel" class="form-control" asp-for="PhoneNumber" autocomplete="off" />
	</div>
	<div class="form-group">
		<label class="form-label" asp-for="TentaclesNumber"></label>
		<input type="number" class="form-control" asp-for="TentaclesNumber" autocomplete="off" />
	</div>
	<div class="form-group">
		<label class="form-label" asp-for="ScareStartDate"></label>
		<input type="date" class="form-control" asp-for="ScareStartDate" autocomplete="off" />
	</div>

	<div class="form-actions">
		<button class="btn" type="submit">Register</button>
	</div>
</form>
